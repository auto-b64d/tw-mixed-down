{
	"manifest_version": 3,
	"name": "tw-mixed-down",
	"description": "원본 개발자 나와라 진짜",
	"version": "1.0.0",
	"icons": {
		"128": "128.png"
	},
	"permissions": [
		"downloads",
		"storage"
	],
	"host_permissions": ["*://*.twitter.com/*"],
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": ["*://*.twitter.com/*"],
			"js": ["dist/content.js"]
		}
	],
	"web_accessible_resources": [
		{
			"matches": ["*://*.twitter.com/*"],
			"resources": ["dist/page.js"]
		},
		{
			"matches": ["*://mobile.twitter.com/*"],
			"resources": ["dist/m-down-btn.js"]
		},
		{
			"matches": ["*://twitter.com/*"],
			"resources": ["dist/down-btn.js"]
		}
	],
	"background": {
		"service_worker": "dist/bg.js"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	}
}
